<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-zinc-900 text-white">
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <div class="mb-8">
            <a class="text-blue-500 hover:underline" href="/">Back</a>
        </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-5 flex-wrap">
        <% if(users && users.length > 0) { %>
          <% users.forEach(user => { %>
        
   <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
              <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-400"><%= user.email %></h5>
            <div class="flex gap-3 mt-4">
                <a class="text-blue-500 hover:underline" href="">Edit User</a>
                <a class="text-red-500 hover:underline" href="/delete/<%= user._id %>">Delete User</a>
            </div>
      </div>
      <% }) %>

          <% } else { %>
            <h2 class="text-2xl text-zinc-400">No Users Found</h2>

         <% } %>
        

    </div>
  </body>
</html>
